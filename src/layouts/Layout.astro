---
import '../styles/index.css'
import Header from './Header.astro'
import Navbar from './Navbar.astro'
import Footer from './Footer.astro'
import {PandaConfig} from '../config'
const {description: defaultDescription, title: defaultTitle} = PandaConfig

export const prerender = true

export interface Props {
    title: string
    navbar?: boolean
    description?: string
}

let {title, navbar, description} = Astro.props
if (navbar === undefined) navbar = true
if (!description) description = defaultDescription
const fullTitle = `${title} - ${defaultTitle}`
---

<!doctype html>
<html lang="en-US" class="mx-4">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <title>{fullTitle}</title>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-7BXSF0SPF6"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-7BXSF0SPF6');
        </script>
    </head>
    <body class="max-width">
        <Header />
        {navbar && <Navbar />}
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
