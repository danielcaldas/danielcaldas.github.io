                        <div class="reviews-header">
                            my reviews <span class="reviews-count">({reviewList.length})</span>
                        </div>
                        <div class="reviews-list">
                            {reviewList.map((book) => (
                                <a
                                    class={`review-item${book.isReading ? ' review-reading' : ''}`}
                                    href={book.link || '#'}
